{% extends 'layout.jinja2' %}
{% block title %} Home {% endblock %}
{% block styles %} {{ super() }} {% endblock %}
{% block content %}
<h1 class="ui header">Jobs</h1>
<div class="ui divider"></div>
<br>

<div style="margin-bottom:2em;" id="filter" class="ui floating dropdown labeled icon button disabled">
  <i class="filter icon"></i>
  <span class="text">Filter Posts</span>
  <div class="menu">
    <div class="ui icon search input"> 
      <i class="sort icon"></i>
      <input type="text" placeholder="Sort by...">
    </div>
    <div class="scrolling menu">
      <div class="item">
        <i class="sort numeric up icon"></i>
        Salary Ascending
        <span style="display:none;">salary-ascending</span>
      </div>
      <div class="item">
        <i class="sort numeric down icon"></i>
        Salary Descending
        <span style="display:none;">salary-descending</span>
      </div>
    </div>
  </div>
</div>

<div id="errors"></div>
<div id="loading">
  <div class="ui three column stackable grid">
  <div class="column">
    <div class="ui raised segment">
      <div class="ui placeholder">
        <div class="image header">
          <div class="line"></div>
          <div class="line"></div>
        </div>
        <div class="paragraph">
          <div class="medium line"></div>
          <div class="short line"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="ui raised segment">
      <div class="ui placeholder">
        <div class="image header">
          <div class="line"></div>
          <div class="line"></div>
        </div>
        <div class="paragraph">
          <div class="medium line"></div>
          <div class="short line"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="ui raised segment">
      <div class="ui placeholder">
        <div class="image header">
          <div class="line"></div>
          <div class="line"></div>
        </div>
        <div class="paragraph">
          <div class="medium line"></div>
          <div class="short line"></div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<div id="results" class="ui stackable cards"></div>
{% endblock %}